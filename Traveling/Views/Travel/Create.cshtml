@model TravelViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <h3 class="display-4">Create</h3>
    <form method="post" enctype="multipart/form-data" asp-action="Create" asp-controller="Travel">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control" />
        </div>

        <div class="form-group">
			<label asp-for="ProfileImage"></label>
			
			<div>
				<input type="file" asp-for="ProfileImage"/>
			</div>

			<span asp-validation-for="ProfileImage" class="text-danger"></span>
		</div> 


        <div class="form-group">
            <label asp-for="Bus"></label>
            <input asp-for="Bus" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="ApproxCost"></label>
            <textarea asp-for="ApproxCost" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Experience"></label>
            <input asp-for="Experience" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn-primary" />
        </div>
    </form>
</div>