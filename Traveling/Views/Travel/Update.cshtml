@model TravelViewModel;



<div class="container">

	<h3 clss="display-4">Update Travel Information</h3>

	<form method="post">
		<div class="form-group">
			<label asp-for="Location">Location</label>
			<input asp-for="Location" class="form-control"/>
		</div>
		<div class="form-group">
			<label asp-for="Title">Title</label>
			<input asp-for="Title" class="form-control"/>
		</div>
		<div class="form-group">
			<label asp-for="ProfileImage"></label>
			
			<div class="custom-file">
				<input asp-for="ProfileImage" class="custom-file-input" id="customFile" />
				<label class="custom-file-label" for="customFile">Choose File</label>
			</div>

			<span asp-validation-for="ProfileImage" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Bus">Bus</label>
			<input asp-for="Bus" class="form-control"/>
		</div>
		<div class="form-group">
			<label asp-for="ApproxCost">ApproxCost</label>
			<input asp-for="ApproxCost" class="form-control"/>
		</div>
		<div class="form-group">
			<label asp-for="Experience">Experience</label>
			<input asp-for="Experience" class="form-control"/>
		</div>

		<div class="form-group">
			<input type="submit" value="Update Info" class="btn btn-primary" />
		</div>
	</form>
</div>


